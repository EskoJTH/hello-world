            </local:OmaCanvas>
            <local:OmaCanvas Grid.Column="3" Grid.Row="1">
                <Line Style="{StaticResource FullVerticalLine}"/>
                <Line Style="{StaticResource FullHorizontalLine}"/>
                <Ellipse Name="ball19" Style="{StaticResource CenterBall}"/>
