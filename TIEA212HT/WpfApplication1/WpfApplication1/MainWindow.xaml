                </local:OmaCanvas >
                <local:OmaCanvas Grid.Column="0" Grid.Row="1">
                    <Line Style="{StaticResource FullVerticalLine}"/>
                </local:OmaCanvas >
                <local:OmaCanvas Grid.Column="2" Grid.Row="1">
